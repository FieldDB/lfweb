<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:lexmain='urn:import:org.palaso.languageforge.client.lex.controls.view'>
	<g:HTMLPanel width="100%" height="100%">
		<g:HTMLPanel width="100%" height="100%" ui:field="examplePanel">
			<div class="lex-dc-row">
				<div id="firefox-bug-fix">
					<div class="lex-dc-column" id="c1">
						<g:Label ui:field="exampleLabel" text="Example_Label"
							horizontalAlignment="ALIGN_RIGHT"></g:Label>
					</div>
					<div class="lex-dc-column" id="c2">
						<lexmain:MultiTextView width="100%" height="100%"
							ui:field="mutTxtExample"></lexmain:MultiTextView>
					</div>
					<div class="lex-dc-column" id="c3-40PIX">
						<g:Button styleName="gwt-Button small-button remove-button"
							width="35px" height="35px" ui:field="btnRemoveExample">
						</g:Button>
					</div>
				</div>
			</div>
		</g:HTMLPanel>
		<g:HTMLPanel width="100%" height="100%" ui:field="translationPanel">
			<div class="lex-dc-row">
				<div id="firefox-bug-fix">
					<div class="lex-dc-column" id="c1">
						<g:Label ui:field="translationLabel" text="Translation_Label"
							horizontalAlignment="ALIGN_RIGHT"></g:Label>
					</div>
					<div class="lex-dc-column" id="c2">
						<lexmain:MultiTextView width="100%" height="100%"
							ui:field="mutTxtTranslation"></lexmain:MultiTextView>
					</div>
					<div class="lex-dc-column" id="c3-40PIX">
					</div>
				</div>
			</div>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 