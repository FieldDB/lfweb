<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">
	<ui:with type='org.palaso.languageforge.client.lex.common.I18nInterface' field='string' />
	<g:HTMLPanel>		
		<div class="form-word"> 
		<div class="lex-dc-row" >
			<div id="firefox-bug-fix">
				<div class="lex-dc-column cpadding5" id="c1">
					<b:Button ui:field='newButton' text="{string.ButtonBarControlView_New_Word}" type="SUCCESS" icon="PLUS"  width="120px"/>
				</div>
				<div class="lex-dc-column cpadding5" id="c2">
					<b:Button ui:field='saveButton' text="{string.ButtonBarControlView_Save}" type="PRIMARY" icon="PENCIL" width="120px"/>
				</div>
				<div class="lex-dc-column cpadding5" id="c3">
				<b:Button ui:field='deleteButton' text="{string.ButtonBarControlView_Delete_Word}" type="LINK" icon="REMOVE" width="120px"/>
				</div>
			</div>
		</div>
		</div>
	</g:HTMLPanel>

</ui:UiBinder>
