<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:up='urn:import:gwtupload.client'
	xmlns:pb='urn:import:org.palaso.languageforge.client.lex.controls'>
	<ui:with type='org.palaso.languageforge.client.lex.common.I18nInterface'
		field='string' />
	<ui:style>
	  @if user.agent ie6 {
	   	 .bowserbutton {
			margin-left: 5px !important;
	   	 }
	   	 .bowserbutton-no-right-padding
	   	 {
			padding-right: 0px !important;
	     }
  		}  @elif user.agent ie7 {
	   	 .bowserbutton {
			margin-left: 5px !important;
	   	 }
	   	 .bowserbutton-no-right-padding
	   	 {
			padding-right: 0px !important;
	     }
  		}  @elif user.agent ie8 {
	   	 .bowserbutton {
			margin-left: 5px !important;
	   	 }
	   	 .bowserbutton-no-right-padding
	   	 {
			padding-right: 0px !important;
	     }
  		}  @elif user.agent ie9 {
	   	 .bowserbutton {
			margin-left: 5px !important;
	   	 }
	   	 .bowserbutton-no-right-padding
	   	 {
			padding-right: 0px !important;
	     }
  		} @else {
		    .bowserbutton {
		
		    }
		  .bowserbutton-no-right-padding
	   	 {
		
	     }
  		}
	</ui:style>

	<g:HTMLPanel width="100%" height="100%">

		<!-- from file begin -->
		<section class="content">
			<div class="form-word">
				<div class="row">
					<g:Label
						text="{string.GatherWordsFromTextView_You_can_add_words_to_your_dictionary_from_written_texts}."
						ui:field="lblTitle" />
				</div>

				<div class="lex-dc-row">
					<div id="firefox-bug-fix">
						<div class="lex-dc-column" id="c1">
							<g:Label text="{string.GatherWordsFromTextView_Filename}"
								width="130px" height="100%" styleName="wordfromtexttextlabel"
								horizontalAlignment="ALIGN_RIGHT" ui:field="lblFileName"></g:Label>
						</div>
						<div class="lex-dc-column" id="c2">
							<div class="field">
								<g:TextBox ui:field="txtFileName" readOnly="true"
									styleName="wordfromtexttextbox"></g:TextBox>
							</div>
							<g:HorizontalPanel width="100%" height="40px"
								ui:field="fileUploadPanel" styleName="wordfromtexttableMargin">
								<g:cell width="80px">
									<g:Button text="{string.GatherWordsFromTextView_Cancel}"
										width="80px" height="40px" ui:field="btnCancel"></g:Button>
								</g:cell>
								<g:cell width="100%">
									<g:SimplePanel width="100%" height="40px"
										ui:field="progressBarPanel">
									</g:SimplePanel>
								</g:cell>
							</g:HorizontalPanel>
						</div>
						<div class="lex-dc-column {style.bowserbutton-no-right-padding}" id="c3"
							style="overflow: hidden; width:150px; max-width:150px">
							<up:Uploader ui:field="textFileUploader" title="Browse"
								validExtensions="TXT" width="150px" autoSubmit="false"
								styleName="wordfromtextfileuploderhide" fileInputSize="5"
								servletPath="../../../api/lex/jsupload.php" height="40px" />

							<div style="position: absolute">
								<g:Button text="{string.GatherWordsFromTextView_Browse}"
									styleName="gwt-Button {style.bowserbutton}" width="150px"
									ui:field="btnBrowser"></g:Button>
							</div>
						</div>
					</div>
				</div>

				<div class="lex-dc-row">
					<div id="firefox-bug-fix">
						<div class="lex-dc-column" id="c1">
							<!-- 130px empty space by use label -->
							<g:Label text="" width="130px" height="100%"
								styleName="wordfromtexttextlabel" horizontalAlignment="ALIGN_RIGHT"></g:Label>
						</div>
						<div class="lex-dc-column" id="c2">
							<!-- empty space -->
						</div>
						<div class="lex-dc-column cnopadding" id="c3">
							<g:Button text="{string.GatherWordsFromTextView_Add_file}"
								width="150px" ui:field="btnAddFile"></g:Button>
						</div>
					</div>
				</div>

			</div>
		</section>
		<!-- from file end -->

		<!-- space begin -->
		<div style="min-height:10px;width:100%;" />
		<!-- space end -->


		<!-- from text begin -->
		<section class="content">
			<div class="form-word">
				<div class="lex-dc-row">
					<div id="firefox-bug-fix">
						<div class="lex-dc-column" id="c1">
							<g:Label text="{string.GatherWordsFromTextView_Text}"
								width="130px" horizontalAlignment="ALIGN_RIGHT" ui:field="lblText"></g:Label>
						</div>
						<div class="lex-dc-column" id="c2">
							<div class="field ">
								<g:TextArea width="100%" height="369px"
									textAlignment="ALIGN_LEFT" visibleLines="2" alignment="LEFT"
									styleName="wordfromtexttextarea" ui:field="txtArea">
								</g:TextArea>
							</div>
						</div>
					</div>
				</div>

				<div class="lex-dc-row">
					<div id="firefox-bug-fix">
						<div class="lex-dc-column" id="c1">
							<!-- 130px empty space by use label -->
							<g:Label text="" width="130px" height="100%"
								styleName="wordfromtexttextlabel" horizontalAlignment="ALIGN_RIGHT"></g:Label>
						</div>
						<div class="lex-dc-column" id="c2">
							<!-- empty space -->
						</div>
						<div class="lex-dc-column" id="c3">
							<g:Button text="{string.GatherWordsFromTextView_Add_text}"
								width="150px" ui:field="btnAddText"></g:Button>
						</div>
					</div>
				</div>
			</div>

		</section>
		<!-- from text end -->
	</g:HTMLPanel>
</ui:UiBinder>
